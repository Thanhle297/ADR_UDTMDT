<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8F3FB"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="top|center_horizontal">

    <!-- Logo  -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgLogo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/logo_shop"
        android:scaleType="centerCrop"
        android:contentDescription="logo ứng dụng"
        app:cornerFamily="rounded"
        app:cornerSize="50%"
        app:strokeColor="#2975AF"
        app:strokeWidth="2dp" />

    <!-- Tiêu đề -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:fontFamily="cursive"
        android:text="Tra cứu thông tin đơn hàng"
        android:textColor="#3773B4"
        android:textSize="26sp"
        android:textStyle="bold" />

    <!-- Ô nhập số điện thoại -->
    <EditText
        android:id="@+id/edtPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="#FFFFFF"
        android:elevation="2dp"
        android:hint="Số điện thoại"
        android:inputType="phone"
        android:padding="12dp" />

    <!-- Nút đăng nhập -->
    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Đăng nhập"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:backgroundTint="#2975AF"
        android:elevation="6dp" />

    <!-- Text đăng ký -->
    <TextView
        android:id="@+id/txtRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chưa có tài khoản? Đăng ký"
        android:textColor="#2975AF"
        android:textStyle="italic"
        android:textSize="16sp"
        android:layout_marginTop="15dp"
        android:clickable="true"
        android:focusable="true" />

</LinearLayout>
