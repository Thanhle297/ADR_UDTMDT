<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".activity.GioHangActivity">

    <!-- Thanh công cụ -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        app:title="Giỏ hàng"
        android:layout_width="match_parent"
        android:background="#007BFF"
        android:layout_height="?attr/actionBarSize" />

    <!-- Vùng hiển thị danh sách hoặc thông báo giỏ hàng -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal">

        <!-- Thông báo giỏ hàng trống -->
        <TextView
            android:id="@+id/txtgiohangtrong"
            android:text="Giỏ hàng trống"
            android:visibility="gone"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="#525469" />

        <!-- Danh sách sản phẩm trong giỏ hàng -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerviewgiohang"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never" />
    </LinearLayout>

    <!-- Khu vực thanh toán cố định ở cuối màn hình -->
    <LinearLayout
        android:id="@+id/layoutThanhToan"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:elevation="6dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp">

        <!-- Tổng tiền -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="5dp"
            android:weightSum="3">

            <TextView
                android:layout_weight="1"
                android:text="Tổng tiền:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#525469"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="5dp" />

            <TextView
                android:id="@+id/txttongtien"
                android:layout_weight="2"
                android:text="0 VNĐ"
                android:gravity="right"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#525469" />
        </LinearLayout>

        <!-- Nút thanh toán -->
        <Button
            android:id="@+id/btn_muahang"
            android:text="Thanh toán"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#1E88E5"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:padding="10dp"
            app:cornerRadius="10dp" />
    </LinearLayout>

</LinearLayout>
