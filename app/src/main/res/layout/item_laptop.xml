<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:elevation="8dp"
    app:cardCornerRadius="14dp"
    app:cardElevation="8dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:foreground="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <!-- Ảnh sản phẩm -->
        <androidx.cardview.widget.CardView
            android:layout_width="112dp"
            android:layout_height="112dp"
            android:layout_marginEnd="14dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="3dp">

            <ImageView
                android:id="@+id/itemlt_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/resource_new"
                android:contentDescription="Hình sản phẩm" />
        </androidx.cardview.widget.CardView>

        <!-- Cột nội dung -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <!-- Tên sản phẩm -->
            <TextView
                android:id="@+id/itemlt_tensp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên sản phẩm"
                android:textColor="#0B1E49"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.01"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginBottom="6dp" />

            <!-- “Chip” giá (giữ nguyên id cho TextView giá) -->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/itemlt_giasp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:text="Giá: 25.000.000 VNĐ"
                    android:textColor="#C62828"
                    android:textSize="14.5sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:background="#FFF4F4" />
            </androidx.cardview.widget.CardView>

            <!-- Mô tả ngắn -->
            <TextView
                android:id="@+id/itemlt_motasp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mô tả sản phẩm..."
                android:textColor="#616161"
                android:textSize="13sp"
                android:lineSpacingExtra="3dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:fontFamily="sans-serif" />

            <!-- Divider mảnh -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#EEEEEE" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
