<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E8F3FB"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="top|center_horizontal">

        <!-- Logo -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgLogo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/logo_shop"
            android:scaleType="centerCrop"
            android:contentDescription="logo ứng dụng"
            app:cornerFamily="rounded"
            app:cornerSize="50%"
            app:strokeColor="#2975AF"
            app:strokeWidth="2dp" />

        <!-- Tiêu đề -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng ký tài khoản"
            android:textColor="#3773B4"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="25dp" />

        <!-- Họ tên -->
        <EditText
            android:id="@+id/edtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Họ và tên"
            android:background="#FFFFFF"
            android:padding="12dp"
            android:layout_marginBottom="15dp" />

        <!-- Số điện thoại -->
        <EditText
            android:id="@+id/edtPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Số điện thoại"
            android:inputType="phone"
            android:background="#FFFFFF"
            android:padding="12dp"
            android:layout_marginBottom="15dp" />

        <!-- Mật khẩu -->
        <EditText
            android:id="@+id/edtPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mật khẩu"
            android:inputType="textPassword"
            android:background="#FFFFFF"
            android:padding="12dp"
            android:layout_marginBottom="15dp" />

        <!-- Nhập lại mật khẩu -->
        <EditText
            android:id="@+id/edtConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập lại mật khẩu"
            android:inputType="textPassword"
            android:background="#FFFFFF"
            android:padding="12dp"
            android:layout_marginBottom="15dp" />

        <!-- Địa chỉ nhận hàng -->
        <EditText
            android:id="@+id/edtAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Địa chỉ nhận hàng"
            android:inputType="textPostalAddress"
            android:background="#FFFFFF"
            android:padding="12dp"
            android:layout_marginBottom="25dp" />

        <!-- Nút đăng ký -->
        <Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đăng ký"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#2975AF"
            android:elevation="6dp"
            android:layout_marginBottom="15dp" />

        <!-- Quay lại đăng nhập -->
        <TextView
            android:id="@+id/txtGoToLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đã có tài khoản? Đăng nhập"
            android:textColor="#2975AF"
            android:textStyle="italic"
            android:textSize="14sp"
            android:layout_marginTop="10dp" />

    </LinearLayout>
</ScrollView>
